<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="update"
        android:summary="System OS Updated Automatically"
        android:title="AUTO UPDATE" />
    <EditTextPreference
        android:defaultValue="ONEPLUS"
        android:key="device"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:summary="PUT YOUR DEVICE NAME"
        android:title="DEVICE NAME"/>
    <ListPreference
        android:defaultValue="1"
        android:entries="@array/my_color"
        android:entryValues="@array/my_color_id"
        android:key="bgcolor"
        android:summary="Select BackGround Color"/>
</PreferenceScreen>